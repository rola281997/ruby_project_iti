

<div class="col-md-8 offset-1 my-5">
     
<h1>Orders</h1>

<br/>
<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Buyer</th>
      <th>State</th>
      <th>Created at</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td> 
        <td><%= order.user.username%></td>
        <td><%= order.state %></td> 
        <td><%= order.created_at %></td> 
      </tr>
     

    <% end %>
  </tbody>
  
</table>

<br>


