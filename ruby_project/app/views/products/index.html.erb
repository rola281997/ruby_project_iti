<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>In stock</th>
      <th>Category</th>
      <th>Brand</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= products.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.inStock_amount %></td>
        <td><%= product.category %></td>
        <td><%= product.brand %></td>
        <td><%= product.image %></td>
       
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
