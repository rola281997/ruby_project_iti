<div class="col-md-9 offset-2 my-5">
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>In stock:</strong>
  <%= @product.inStock_amount %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category.name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= @product.brand.name %>
</p>

<p>
  <strong>Image:</strong>
  <%=image_tag(@product.image, style: "width:250px; height:150px; margin:5px", class: "rounded") if @product.image.attached? %>
</p>

  <% if user_signed_in? && current_user.role == "buyer" %> 
<%= form_tag("/carts/addtocart", method: "get") do %>
  <%= hidden_field_tag(:id, @product.id) %>
  <%= submit_tag "Add to cart" %>
<% end %>
<% end %>

 <% if can? :update , @product  %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
</div>